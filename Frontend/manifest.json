{
    "manifest_version": 3,
    "name": "Video Audio Extractor",
    "version": "1.0",
    "description": "Extract and download audio from YouTube and Facebook videos.",
    "permissions": ["tabs", "activeTab", "scripting", "notifications"],
    "host_permissions": [
      "https://www.youtube.com/*",
      "https://youtu.be/*",
      "https://www.facebook.com/*",
      "https://fb.com/*",
      "https://fb.watch/*",
      "http://localhost:5000/*"
    ],
    "background": {
      "service_worker": "src/background/background.js"
    },
    "action": {
      "default_popup": "index.html"
    },
    "content_scripts": [
      {
        "matches": [
          "https://www.youtube.com/watch*",
          "https://youtu.be/*",
          "https://www.facebook.com/*",
          "https://fb.com/*",
          "https://fb.watch/*"
        ],
        "js": ["src/content/content.js"]
      }
    ]
  }
  